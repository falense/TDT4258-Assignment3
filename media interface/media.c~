#include <sys/types.h>
#include <sys/stat.h>
#include <fcntl.h>
#include <unistd.h>
#include <errno.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <linux/soundcard.h>


//#include "sound.h"
#include "screen.h"

int main(){
	initScreen();
	initSound();
	Color d = {.red = 0, .green = 0, .blue = 0};
	clearScreen(d);
	printf("Screen (%dx%d).\n",SCREENWIDTH, SCREENHEIGHT);
	printf("Blocks (%dx%d).\n",W_BLOCKS, H_BLOCKS);
	printf("Block size (%dx%d).\n",BLOCK_WIDTH, BLOCK_HEIGHT);
	for (int i = 0; i < H_BLOCKS; i++)
		setBlock(i,i,White);
	unsigned int c = 0;
	while(1)
		writeSoundValue(c++%255);
		
	closeScreen();
	closeSound();

}
